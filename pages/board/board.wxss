 swiper{
  width: 100%;
  height: 240px;
}
image{
  width: 100%;
  height: 100%;
}
.header{
  display: block;
  font-size: 26px;
  text-align: center;
  color: #333;
  margin: 22px;
}
.title{
  font-weight: 800;
}
.info{
  display: block;
  font-size: 18px;
  margin-top:14px;
}
.container-ul{
  display: flex;
  flex-direction: column;
  width:90%;
  margin-left: 21px;
}
.li image{
  width: 20px;
  height: 20px;
  padding-top: 20px;
}
.li{
  display: flex;
  width:100%;
  height: 60px;
  vertical-align: middle;
  background-color:#f0f0f0;
  margin-bottom: 10px; 
  border-radius: 4px;

}
.li text{
  flex: 1;
  padding-top: 20px; 
  padding-left:12px;
}
.hover-bg{
  background-color:#999999;
  color: #fff; 
}